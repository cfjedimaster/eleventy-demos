---
layout: layout
---

<h2>{{ title }}</h2>
<p><i>Published {{ date | dtFormat }}</i></p>

{{ content }}

{% if related %}
<h3>Related Posts</h3>
	<ul>
	{% assign posts = related | getRelated: collections.posts %}
	{% for post in posts %}
		<li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
	{% endfor %}
	</ul>
{% endif %}
