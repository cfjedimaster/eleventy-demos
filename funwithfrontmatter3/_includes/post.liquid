---
layout: layout
---

<h2>{{ title }}</h2>
<p><i>Published {{ date | dtFormat }}</i>
{% if edited %}
<i>~ Edited {{ edited | dtFormat }}
{% if editReason %}
	({{ editReason }})
{% endif %}
</i>
{% endif %}
</p>
{% if followup %}
	{% assign followupPost = followup | getByURL: collections.posts %}
	<p><strong>Followup:</strong> <a href="{{ followupPost.url }}">{{ followupPost.data.title }}</a></p>
{% endif %}

{{ content }}

{% if related %}
<h3>Related Posts</h3>
	<ul>
	{% assign posts = related | getRelated: collections.posts %}
	{% for post in posts %}
		<li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
	{% endfor %}
	</ul>
{% endif %}
